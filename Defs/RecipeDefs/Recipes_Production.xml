<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <RecipeDef>
    <defName>MakeCloth</defName>
    <label>Make Cloth</label>
    <description>Combine cotton thread to make cloth.</description>
    <jobString>Weaving cotton thread.</jobString>
    <workAmount>1000</workAmount>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>TailoringSpeed</workSpeedStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <recipeUsers>
      <li>ElectricTailoringBench</li>
      <li>HandTailoringBench</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CottonBoll</li>
          </thingDefs>
        </filter>
        <count>12</count>
      </li>
    </ingredients>
    <products>
      <Cloth>6</Cloth>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CottonBoll</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

